# Общие
ENV=local                     # соответствует env: "local" в YAML
LOG_LEVEL=debug               # ваш существующий LOG_LEVEL (не в YAML, но полезно)

# Путь к локальному хранилищу
STORAGE_PATH=./storage/       # storage_path: "./storage/"

# HTTP сервер
HTTP_ADDRESS=localhost:8080   # http_server.address
HTTP_HOST=localhost
APP_PORT=8080                 # ваш существующий APP_PORT — порт сервера
# Таймауты (time.Duration в Go, формат: 4s, 60s и т.д.)
HTTP_TIMEOUT=4s               # http_server.timeout
HTTP_IDLE_TIMEOUT=60s         # http_server.idle_timeout

# Параметры базы данных (развернутые поля)
DB_DRIVER=postgres            # database_server.driver
DB_HOST=localhost            # database_server.host
DB_PORT=5432                 # database_server.port
DB_USER=user                 # database_server.user
DB_PASSWORD=secret           # database_server.password
DB_NAME=database             # database_server.dbname
DB_SSLMODE=disable           # database_server.sslmode
# У вас уже есть (оставлю как пример / возможное переопределение)
# DB_URL=postgres://postgres:postgres@localhost:5432/inventory?sslmode=disable
